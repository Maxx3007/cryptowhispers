<section class="form-auth text-center">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Please log in!</h1>
  </div>

  <div class="form-label-group">
    <label for="inputEmail">Email address</label>
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email Adress", autocomplete: "current-email" %>

  </div>

  <div class="form-label-group">
    <label for="inputPassword">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", id: "inputPassword" %>
  </div>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
<% end %>

<%= render "devise/shared/links" %>


</section>

