<title>CryptoWhispers</title>




<div class="container m-5">


    <% @posts.each do |post| %>

          <% if browser.device.mobile? %>
            <div class="card mx-auto" style="width: 800px;">
              <a href="<%= post_url(post)  %>"  > <%= image_tag(post.image.mobile.url) %></a>
          <% else %>
            <div class="card mx-auto" style="width: 900px;">
              <a href="<%= post_url(post)  %>"  > <%= image_tag(post.image.standard.url) %></a>
          <% end %>
              <div class="card-body">
                <h5 class="card-title text-center "><%= link_to post.title, post, class: "text-decoration-none text-reset" %></h5>
                <p class="card-text text-center"><%= post.description %></p>
              </div>
            </div>
        <br>
    <% end %>


<br>

</div>
